{
    "name": "kcs/filesystem",
    "description": "Filesystem abstraction library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alessandro Chitolina",
            "email": "alekitto@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4 || ^8.0",
        "doctrine/collections": "^1.0 || ^2.0",
        "kcs/stream": "dev-main",
        "symfony/mime": "^4.4 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "async-aws/simple-s3": "^1.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "solido/php-coding-standards": "dev-master",
        "symfony/process": "*",
        "symfony/var-dumper": "^4.4 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "Kcs\\Filesystem\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [ ".github", "data", "tests", "phpunit.xml", "infection.json.dist", "phpstan.neon" ]
    },
    "scripts": {
        "phpstan": "phpstan analyse lib/ -c ./phpstan.neon --level=8 --no-progress -vvv --memory-limit=2048M",
        "cscheck": "vendor/bin/phpcs --standard=Solido lib/",
        "csfix": "vendor/bin/phpcbf --standard=Solido lib/"
    },
    "config": {
        "sort-packages": true
    }
}
