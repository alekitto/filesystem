{
    "name": "kcs/filesystem",
    "description": "Filesystem abstraction library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alessandro Chitolina",
            "email": "alekitto@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "doctrine/collections": "^1.0 || ^2.0",
        "kcs/stream": "^0.1@dev",
        "symfony/mime": ">=5.4"
    },
    "require-dev": {
        "async-aws/s3": "^2.0",
        "async-aws/simple-s3": "^2.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "solido/php-coding-standards": "dev-master",
        "symfony/config": ">=5.4",
        "symfony/dependency-injection": ">=5.4",
        "symfony/http-kernel": ">=5.4",
        "symfony/process": ">=5.4",
        "symfony/var-dumper": ">=5.4"
    },
    "autoload": {
        "psr-4": {
            "Kcs\\Filesystem\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [ ".github", "data", "tests", "phpunit.xml", "infection.json.dist" ]
    },
    "scripts": {
        "phpstan": "phpstan analyse lib/ -c vendor/solido/php-coding-standards/phpstan.neon --level=9 --no-progress -vvv --memory-limit=2048M",
        "cscheck": "vendor/bin/phpcs --standard=Solido lib/",
        "csfix": "vendor/bin/phpcbf --standard=Solido lib/"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
